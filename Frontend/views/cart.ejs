</head>

<body>
  <%- include("partials/header") %>

    <section class="cart">

      <div class="container">
        <!-- 我的購物清單title -->
        <div class="heading">
          <h1 class="page-heading">我的購物清單</h1>
        </div>
        <div class="divider"></div>

        <!-- container -->
        <table class="tab">
          <thead class="head">
            <th>
              <input type="checkbox" class="selectAll">
            </th>
            <th class="thPic">商品照片</th>
            <th class="thName">商品名稱</th>
            <th class="thSize">規格</th>
            <th class="thPrice">單價</th>
            <th class="thNum">數量</th>
            <th class="thSum">小計</th>
            <th class="thAction">操作</th>
          </thead>
          <tbody>
            <tr>
              <td><input type="checkbox" class="chkbox" /></td>
              <td><img src="img/Cakes/butterscotch 1-2.jpg" alt=""></td>
              <td class="productName">黃色5號棒蛋糕</td>
              <td class="productSize">8吋</td>
              <td class="price">$200</td>
              <td class="amount">
                <button type="button" class="sub">&#8722;</button>
                <input type="text" name="" value="1" class="num">
                <button type="button" class="add">&#x2B;</button>
              </td>
              <td class="subtotal">$200</td>
              <td class="delete"><i class="fas fa-times"></td>
            </tr>
            <tr>
              <td><input type="checkbox" class="chkbox" /></td>
              <td><img src="img/Cakes/oreo 1-1.jpg" alt=""></td>
              <td class="productName">歐瑞兒甜進你的心
              </td>
              <td class="productSize">6吋</td>
              <td class="price">$100</td>
              <td class="amount">
                <button type="button" class="sub">&#8722;</button>
                <input type="text" name="" value="1" class="num">
                <button type="button" class="add">&#x2B;</button>
              </td>
              <td class="subtotal">$100</td>
              <td class="delete"><i class="fas fa-times"></td>
            </tr>
            <tr>
              <td><input type="checkbox" class="chkbox" /></td>
              <td><img src="img/Cakes/redvelvet 1-1.jpg" alt=""></td>
              <td class="productName">血腥瑪麗吼哩系</td>
              <td class="productSize">8吋</td>
              <td class="price">$1000</td>
              <td class="amount">
                <button type="button" class="sub">&#8722;</button>
                <input type="text" value="1" class="num">
                <button type="button" class="add">&#x2B;</button>
              </td>
              <td class="subtotal">$1000</td>
              <td class="delete"><i class="fas fa-times"></td>
            </tr>
          </tbody>
        </table>

        <!-- 總計 -->
        <div class="totalPrice">
          <span>已選<span class="num_sum">1</span>件商品</span>
          <span>總計:</span>
          <span class="sum">0</span>
          <div class="btn">
            <span class="delSelected">刪除勾選商品</span>
            <span class="delAll">清空購物車</span>
            <span class="confirm">確認訂單</span>
            <!-- <span><a class="confirm" href="/checkout">確認訂單</a></span> -->
          </div>

        </div>

