        <script>
          // var data ='<%=productInformation%>';
          // // console.log($('.tab').find('.productName').text());
          // sessionStorage.setItem('data',data);
          


          // input更改數量的值可以儲存進資料庫
          $('.num').on('blur',function(){
            if($(this).val() == ''){
            }else{
              let data = { 
                inputVal: $(this).val(),
                pId:$(this).attr('id')
              };
              $.ajax({
                url:'/cart/updateNum/input',
                  type: 'put',
                  data: data,
                  success:function(data){
                    console.log(data);
                  }
                })
              }
            
          })

          // 加,減 更改數量的值可以儲存進資料庫
          $('.amount button').on('click',function(){
            let data = { 
              inputVal: parseInt( $(this).parent('.amount').find('input').val())+1,
              pId:$(this).parent('.amount').find('input').attr('id')
            };
            
            console.log(data);
              $.ajax({
                  url:'/cart/updateNum/button',
                  type: 'put',
                  data: data,
                  success:function(data){
                    console.log(data);
                  }
                })
              
            
          })
          

        </script>
</body>

</html>